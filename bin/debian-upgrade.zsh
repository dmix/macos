#!/usr/bin/env zsh

if $DEBIAN; then
    echo "DEBIAN Detected"
    echo "================================================================"
    echo "Updating...."
    echo "================================================================"
    sudo apt-get update

    echo "================================================================"
    echo "Upgrading...."
    echo "================================================================"
    sudo apt-get upgrade

    echo "================================================================"
    echo "Dist Upgrading...."
    echo "================================================================"
    sudo apt dist-upgrade

    echo "================================================================"
    echo "Autocleaning...."
    echo "================================================================"
    sudo apt-get autoclean

    echo "================================================================"
    echo "Done"
    echo "================================================================"
fi
